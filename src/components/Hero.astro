---
import heroImage from '../assets/hero.jpg';
---

<section class="hero">
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <h1>Música Crossover</h1>
        <p>Show musical VARIADO para todo tipo de eventos</p>
    </div>
</section>

<style>
    .hero {
        position: relative;
        height: 90vh;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-image: url('/src/assets/hero.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        margin-bottom: var(--spacing-2xl);
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.25); /* Ligeramente más transparente */
    }

    .hero-content {
        position: relative;
        z-index: 1;
        color: #FFFFFF;
        text-align: center;
        padding: 0 var(--spacing-lg);
        max-width: var(--desktop);
        margin-top: -70px;
    }

    .hero-content h1 {
        font-size: 4rem; /* Reducido de 6rem a 4rem */
        font-weight: 600; /* Reducido de 700 a 600 */
        margin-bottom: var(--spacing-lg); /* Reducido el espacio */
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3); /* Sombra más sutil */
        letter-spacing: 1px; /* Reducido de 2px a 1px */
        color: #FFFFFF;
    }

    .hero-content p {
        font-size: 2rem; /* Reducido de 3rem a 2rem */
        text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.3); /* Sombra más sutil */
        font-weight: 400; /* Reducido de 500 a 400 */
        letter-spacing: 0.5px; /* Reducido de 1px a 0.5px */
        color: #FFFFFF;
    }

    @media (max-width: 768px) {
        .hero-content h1 {
            font-size: 2.5rem; /* Reducido de 4rem a 2.5rem */
            text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.3);
        }

        .hero-content p {
            font-size: 1.5rem; /* Reducido de 2rem a 1.5rem */
            text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.2);
        }
    }
</style>





